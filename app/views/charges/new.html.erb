<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Total amount for Premium Member: $<strong><%= "#{@amount}" %></strong></span>
    </label>
  </article>
  <script class="stripe-button"
          src="https://checkout.stripe.com/checkout.js"
          data-key="<%=@stripe_btn_data[:key] %>"
          data-description="<%=@stripe_btn_data[:description]%>"
          data-amount="<%=@stripe_btn_data[:amount] %>"></script>
<% end %>
